<configuration>

  <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>
        %d{HH:mm:ss, Asia/Vladivostok} [%thread] %.-1level %logger{36} - %msg%n%xEx{30}
      </pattern>
    </encoder>
  </appender>

  <appender name="filesystem" class="ch.qos.logback.core.FileAppender">
    <file>events.log</file>
    <append>true</append>
    <immediateFlush>false</immediateFlush>
    <encoder>
      <pattern>
        %d{HH:mm:ss, Asia/Vladivostok} [%thread] %.-1level %logger{36} - %msg%n%xEx{30}
      </pattern>
    </encoder>
  </appender>
  <root level="INFO">
    <appender-ref ref="console"/>
    <appender-ref ref="filesystem"/>
  </root>

</configuration>